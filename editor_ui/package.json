{
    "name": "compozeFlow-editor-ui",
    "productName": "compozeFlow",
    "version": "1.0.0",
    "description": "compozeFlow Video Assembly Editor.",
    "main": "main.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development electron .",
        "build": "node build.js",
        "dev": "cross-env NODE_ENV=development npm run build && cross-env NODE_ENV=development npm start",
        "prod": "npm run build && cross-env NODE_ENV=production electron .",
        "test": "playwright test",
        "test:ui": "playwright test --headed",
        "test:debug": "playwright test --debug",
        "test:new-assembly": "playwright test tests/ui/new-video-assembly.spec.js --headed",
        "smoke": "playwright test --project=smoke",
        "regression": "playwright test --project=regression"
    },
    "dependencies": {
        "electron": "^35.0.0",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@playwright/test": "^1.51.1",
        "cross-env": "^7.0.3",
        "electron-playwright-helpers": "^1.7.1",
        "fs-extra": "^11.2.0",
        "glob": "^10.3.10",
        "terser": "^5.26.0"
    }
}
